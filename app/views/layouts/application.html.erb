<!DOCTYPE html>
<html>

<head>
  <title>App</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <div class="header-items">
      <div class="header-logo">
        <%= link_to "謎解きSNS", '#', class:"no-underline　text-white" %>
      </div>
      <nav>
        <ul class="nav-list">
          <li><%= link_to "Home",   '#', class:"no-underline text-white" %></li>
          <li><%= link_to "Help",   '#', class:"no-underline text-white" %></li>
          <li><%= link_to "Log in", '#', class:"no-underline text-white" %></li>
        </ul>
      </nav>
    </div>
  </header>
  <main>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </main>
  <footer>

  </footer>
</body>

</html>
