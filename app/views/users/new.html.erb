<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>

    <%= f.label :name, "名前" %>
    <%= render 'shared/error_messages', object: f.object, column: :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email, "Eメール" %>
    <%= render 'shared/error_messages', object: f.object, column: :email %>
    <%= f.text_field :email, class: 'form-control' %>

    <%= f.label :password, "パスワード" %>
    <%= render 'shared/error_messages', object: f.object, column: :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "パスワードの再確認" %>
    <%= render 'shared/error_messages', object: f.object, column: :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%= f.submit "ユーザー登録" %>
    <% end %>
  </div>
</div>
